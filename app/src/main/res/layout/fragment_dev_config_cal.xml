<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naqing.dev_views.fragment_dev_config_cal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_0"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/dct_title"
            style="@style/common_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="配置参数表"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:weightSum="2">

            <TextView
                style="@style/common_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="效准参数"/>
            <TextView
                android:id="@+id/dcc_cal_type"
                style="@style/common_input_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="校准" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="5dp"
            android:layout_weight="1.2"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/common_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:popupBackground="#001952"
                android:text="效准点数"/>
            <TextView
                style="@style/common_input_text"
                android:id="@+id/dcc_cal_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="校准" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="5.4">

            <LinearLayout
                android:id="@+id/dcc_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"></LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/common_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="当前值:"/>
            <TextView
                style="@style/common_text"
                android:id="@+id/dcc_cvalue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="--"/>
            <TextView
                style="@style/common_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="当前温度:"/>
            <TextView
                style="@style/common_text"
                android:id="@+id/dcc_ctempr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="--"/>
            <Button
                android:id="@+id/dcc_set"
                style="@style/common_button_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="校准" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>