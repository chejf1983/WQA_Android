<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/device_0"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:id="@+id/m_monitor_name"
        style="@style/common_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="bottom|center_horizontal"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/m_monitor_alarm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:layout_weight="0.8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="6"
        android:background="@drawable/device_1"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/m_monitor_data_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:gravity="center"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/m_monitor_index"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/m_monitor_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3.3"
            android:gravity="center"
            android:text=""
            android:textSize="40dp" />

        <TextView
            android:id="@+id/m_monitor_range"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:gravity="center"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:id="@+id/m_monitor_temper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/m_monitor_config_button"
            style="@style/common_button_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:src="@drawable/dev_config" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

</LinearLayout>