<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naqing.control.fragment_control_history">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_margin="2dp"
            android:gravity="right"
            android:weightSum="5">
            <TextView
                style="@style/common_text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="时间:"/>
            <TextView
                android:id="@+id/mchart_start_time"
                style="@style/common_input_text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1.65"/>
            <TextView
                style="@style/common_text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="-"/>
            <TextView
                android:id="@+id/mchart_end_time"
                style="@style/common_input_text"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1.65"/>

            <Button
                style="@style/common_button_style"
                android:id="@+id/mchart_search"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:text="搜索"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_margin="2dp"
            android:gravity="right"
            android:weightSum="5">

            <TextView
                style="@style/common_text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="探头:"/>
            <TextView
                android:id="@+id/mchart_devs"
                style="@style/common_input_text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2.5"/>
            <TextView
                style="@style/common_text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="参数:"/>
            <TextView
                android:id="@+id/mchart_data"
                style="@style/common_input_text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.8"/>
            <Button
                style="@style/common_button_style"
                android:id="@+id/mchart_del"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:text="删除"/>
        </LinearLayout>

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/mLineChar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.2" />
    </LinearLayout>
</FrameLayout>